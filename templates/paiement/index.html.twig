{% extends 'base.html.twig' %}

{% block title %}Formation!{% endblock %}

{% block body %}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">



</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
        <h2 class="text-center"> List des module et les cours</h2>
        <br>
        {% for row in inscriptions %}
            <li class="nav-item">
                <span>{{ row.module.titre }}</span>
                <br>
            {% set cour = row.module.cour %}

            {% for list in cour %}
                <a class="nav-link" href="{{ path('inscription_view_cours', {'id': list.id}) }}">
                    <span>{{ list.titre }}</span>
                </a>
                
            {% endfor %}
        {% else %}
            <p class="m-0 font-weight-bold">
                Aucun module trouvé.
            </p>
        
        {% endfor %}
    <hr class="sidebar-divider my-0">

    <hr class="sidebar-divider">
    
    </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar -->
                {% include "navbar.html.twig" %}
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Payement de la formation</h1>
                    <p class="mb-4">
                    </p>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Paiement Bancaire</h6>
                                </div>
                                <div class="card-body">
                                    <form action="{{ path('app_paiement') }}" method="post">
                                        <div class="form-group">
                                            <label for="cardNumber">Numéro de Carte</label>
                                            <input type="text" class="form-control" id="cardNumber" name="cardNumber" placeholder="Entrez le numéro de carte" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="cardHolder">Nom du Titulaire</label>
                                            <input type="text" class="form-control" id="cardHolder" name="cardHolder" placeholder="Entrez le nom du titulaire" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="expiryDate">Date d'Expiration</label>
                                            <input type="month" class="form-control" id="expiryDate" name="expiryDate" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="cvv">CVV</label>
                                            <input type="text" class="form-control" id="cvv" name="cvv" placeholder="Entrez le CVV" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Payer</button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Paiement Mobile</h6>
                                </div>
                                <div class="card-body">
                                    <form action="{{ path('app_paiement') }}" method="post">
                                        <div class="form-group">
                                            <label for="mobileNumber">Numéro de Téléphone</label>
                                            <input type="text" class="form-control" id="mobileNumber" name="mobileNumber" placeholder="Entrez le numéro de téléphone" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="operator">Opérateur</label>
                                            <select class="form-control" id="operator" name="operator" required>
                                                <option value="orange">Orange Money</option>
                                                <option value="mtn">MTN Mobile Money</option>
                                                <option value="paypal">PayPal</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="amount">Montant</label>
                                            <input type="number" class="form-control" id="amount" name="amount" placeholder="Entrez le montant" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Payer</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- DataTales Example -->
                    
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>vestion Production &copy; {{ "now"|date('Y-m-d') }}</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>


</body>

</html>
{% endblock %}
