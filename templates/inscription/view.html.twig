{% extends 'base.html.twig' %}

{% block title %}Formation!{% endblock %}

{% block body %}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">



</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
        <h4 class="text-center"> List des module</h4>
        <br>
        {% set nbmodule = 1 %}
        {% for row in inscriptions %}
            <li class="nav-item">
                <p style="color: #fff; background-color: #007bff; padding: 5px 10px; border-radius: 5px; display: inline-block;">
                    Module  {{ nbmodule }} Nombre video {{ row.module.cour|length }} :
                    <span class="font-weight-bold text-info">{{ row.module.titre }}</span>
                </p><br>
                
            {% set cour = row.module.cour %}
            {% set idmodule =  row.module.id%}
            {% set chapitre = 1 %}
            {% for list in cour %}
                <p style="margin-left: 30px; margin-bottom: 8px;"></p>
                    <span style="color: #ffc107; font-weight: bold;">Chapitre {{ chapitre }} :
                        <a class="nav-link d-inline-block"  href="{{ path('inscription_view_cours', {'id': idmodule}) }}">
                            <span>{{ list.titre }}</span>
                        </a>
                    </span>
                </p>
                </p>
            {% set chapitre = chapitre + 1 %}
            {% endfor %}
            {% set nbmodule = nbmodule + 1 %}
        {% else %}
            <p class="m-0 font-weight-bold">
                Aucun module trouvé.
            </p>
        
        {% endfor %}
    <hr class="sidebar-divider my-0">

    <hr class="sidebar-divider">
    
    </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar -->
                {% include "navbar.html.twig" %}
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Formation</h1>
                    <p class="mb-4">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Liste des video du Module </h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <div class="form-group row">
                                    {% for row in inscriptions %}
                                        <div class="col-sm-5 mb-3 ">
                                            {% set statut = row.module.paiements %}
                                            
                                            {% if statut is empty %}
                                                {% set cour = row.module.cour %}

                                                {% for list in cour %}
                                                    {% if loop.first %}
                                                    <a class="nav-link" href="{{ path('app_paiement') }}">
                                                        <video class="img-fluid" src="{{ asset('videos/' ~ list.video) }}" alt="Video" style="width: 90%; height: auto;">
                                                            <span>{{ list.titre }}</span>   
                                                        </video>   
                                                    </a>
                                                    {% endif %}
                                                {% endfor %}
                                                
                                                <br>
                                                <p class="m-0 font-weight-bold text-primary">
                                                    Titre: 
                                                    {{ row.module.titre }}
                                                </p>
                                                <p class="m-0 font-weight-bold text-primary">
                                                    Nombre de video: 
                                                    {{ row.module.cour|length }}
                                                </p>
                                            
                                            {% else %}
                                                {% set cour = row.module.cour %}

                                                {% for list in cour %}
                                                    {% if loop.first %}
                                                        <a class="nav-link" href="{{ path('inscription_view_cours',{'id':row.module.id}) }}">
                                                            <video class="img-fluid" src="{{ asset('videos/' ~ list.video) }}" alt="Video" style="width: 90%; height: auto;">
                                                                <span>{{ list.titre }}</span>   
                                                            </video>   
                                                        </a>
                                                    {% endif %}
                                                {% endfor %}
                                                <br>
                                                <p class="m-0 font-weight-bold text-primary">
                                                    Titre: 
                                                    {{ row.module.titre }}
                                                </p>
                                                <p class="m-0 font-weight-bold text-primary">
                                                    Nombre de video: 
                                                    {{ row.module.cour|length }}
                                                </p>
                                                    
                                            {% endif %}
                                        </div>
                                    {% else %}
                                        <p class="m-0 font-weight-bold text-danger">
                                            Aucun module trouvé.
                                        </p>
                                    
                                    {% endfor %}  
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>vestion Production &copy; {{ "now"|date('Y-m-d') }}</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
{% endblock %}