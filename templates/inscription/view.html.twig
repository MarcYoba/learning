{% extends 'base.html.twig' %}

{% block title %}Formation!{% endblock %}

{% block body %}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <style>
        .progress-container {
            width: 100%;
            height: 5px;
            background-color: #ddd;
            margin-top: 5px;
        }

        .progress-bar {
            height: 100%;
            width: 0;
            background-color: #4CAF50;
            transition: width 0.1s linear;
        }
    </style>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        {% include "navcour.html.twig" %}
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar -->
                {% include "navbar.html.twig" %}
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Formation</h1>
                    <p class="mb-4">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Liste des video du Module </h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <div class="form-group row">
                                    {% for row in inscriptions %}
                                        <div class="col-sm-5 mb-3 ">
                                            {% set statut = row.module.paiements %}
                                            
                                            {% if statut is empty %}
                                                {% set cour = row.module.cour %}

                                                {% for list in cour %}
                                                    {% if loop.first %}
                                                    <a class="nav-link" href="{{ path('app_paiement') }}">
                                                        <video class="img-fluid" src="{{ asset('videos/' ~ list.video) }}" alt="Video" style="width: 90%; height: auto;">
                                                            <span>{{ list.titre }}</span>   
                                                        </video>   
                                                    </a>
                                                    {% endif %}
                                                {% endfor %}
                                                
                                                <br>
                                                <p class="m-0 font-weight-bold text-primary">
                                                    Titre: 
                                                    {{ row.module.titre }}
                                                </p>
                                                <p class="m-0 font-weight-bold text-primary">
                                                    Nombre de video: 
                                                    {{ row.module.cour|length }}
                                                </p>
                                            
                                            {% else %}
                                                {% set cour = row.module.cour %}

                                                {% for list in cour %}
                                                    {% if loop.first %}
                                                        <a class="nav-link" href="{{ path('inscription_view_cours',{'id':row.module.id}) }}">
                                                            <video class="img-fluid" src="{{ asset('videos/' ~ list.video) }}" alt="Video" style="width: 90%; height: auto;">
                                                                <span>{{ list.titre }}</span>   
                                                            </video>   
                                                        </a>
                                                    {% endif %}
                                                {% endfor %}
                                                <br>
                                                <p class="m-0 font-weight-bold text-primary">
                                                    Titre: 
                                                    {{ row.module.titre }}
                                                </p>
                                                <p class="m-0 font-weight-bold text-primary">
                                                    Nombre de video: 
                                                    {{ row.module.cour|length }}
                                                </p>
                                                    
                                            {% endif %}
                                        </div>
                                    {% else %}
                                        <p class="m-0 font-weight-bold text-danger">
                                            Aucun module trouv√©.
                                        </p>
                                    
                                    {% endfor %}  
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Production &copy; {{ "now"|date('Y-m-d') }}</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    

</body>

</html>
{% endblock %}
