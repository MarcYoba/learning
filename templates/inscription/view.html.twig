{% extends 'base.html.twig' %}

{% block title %}Formation!{% endblock %}

{% block body %}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">



</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
        {% for row in inscriptions %}
        <li class="nav-item">
                <span>{{ row.module.titre }}</span>
                <br>
            {% set cour = row.module.cour %}

            {% for list in cour %}
                <a class="nav-link" href="{{ path('inscription_view_cours', {'id': list.id}) }}">
                    <span>{{ list.titre }}</span>
                </a>
                
            {% endfor %}
        {% endfor %}
    <hr class="sidebar-divider my-0">

    <hr class="sidebar-divider">
    
    </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <header class="page-header">
                    <!-- RD Navbar-->
                    <div class="container-fluid">
                        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                          <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                          <ul class="navbar-nav">
                      <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_home') }}">Home</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="{{ path('produit_Boutique') }}">Boutique</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href=" {{ path('app_module') }}">Module</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_cours') }}">Cours</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="contacts.html">Contacts</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                      </li>
                          </ul>
                        </div>
                      </nav>
                    </div>
                  </header>
            
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Formation</h1>
                    <p class="mb-4">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Liste des video du Module </h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <div class="form-group row">
                                    {% for row in inscriptions %}
                                        <div class="col-sm-5 mb-3 "> 
                                            {% set cour = row.module.cour %}

                                            
                                                {% for list in cour %}
                                                    {% if loop.first %}
                                                    <a class="nav-link" href="{{ path('inscription_view_cours', {'id': list.id}) }}">
                                                        <video class="img-fluid" src="{{ asset('videos/' ~ list.video) }}" alt="Video" style="width: 90%; height: auto;">
                                                            <span>{{ list.titre }}</span>   
                                                        </video>   
                                                    </a>
                                                    {% endif %}
                                                {% endfor %}
                                            
                                            <br>
                                            <p class="m-0 font-weight-bold text-primary">
                                                Titre: 
                                                {{ row.module.titre }}
                                            </p>
                                            <p class="m-0 font-weight-bold text-primary">
                                                Nombre de video: 
                                                {{ row.module.cour|length }}
                                            </p>
                                    {% endfor %}  
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>vestion Production &copy; {{ "now"|date('m-d-y') }}</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
{% endblock %}