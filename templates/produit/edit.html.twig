{% extends 'base.html.twig' %}

{% block title %}Create Product{% endblock %}

{% block body %}

<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="shortcut icon" href="assets/img/ico/favicon.png">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Gestion de Stock</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
    <style>
        .drop{
            display: none;
        }
    </style>

</head>

<body class="bg-gradient-gray">
    
    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="card-header py-3">
                                
                                <div class="form-group row">
                                    <div class="col-sm-8">
                                        <h1 class="m-0 font-weight-bold text-primary">Creation de produit!</h1>
                                    </div>
                                    <div class="col-sm-2">
                                        <a href="{{ path('produit_list') }}" class="btn btn-primary">
                                            <i class="fas fa-list">List</i></a>
                                    </div>
                                    <div class="col-sm-2">
                                        <a href="{{ path('produit_Boutique') }}" class="btn btn-success">
                                            <i class="fas fa-home">Home</i></a>
                                    </div>
                                </div>
                            </div><br>
                            {{ form_start(form) }}
                                {{ form_label(form.nom) }}
                                {{ form_widget(form.nom, {
                                    'attr': {'placeholder': products.nom, 'value': products.nom}
                                }) }}
                                {{ form_label(form.prix) }}
                                {{ form_widget(form.prix, {
                                    'attr': {'placeholder': products.prix, 'value': products.prix}
                                }) }}
                                {{ form_label(form.quantite) }}
                                {{ form_widget(form.quantite, {
                                    'attr': {'placeholder': products.quantite, 'value': products.quantite}
                                }) }}
                                {{ form_label(form.caracteristique) }}
                                {{ form_widget(form.caracteristique, {
                                    'attr': {'placeholder': products.caracteristique, 'value': products.caracteristique}
                                }) }}
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description, {
                                    'attr': {'placeholder': products.description, 'value': products.description}
                                }) }}
                                {{ form_label(form.reduction) }}
                                {{ form_widget(form.reduction, {
                                    'attr': {'placeholder': products.reduction, 'value': products.reduction}
                                }) }}
                                {{ form_label(form.createAd) }}
                                {{ form_widget(form.createAd, {
                                    'attr': {'placeholder': products.createAd|date("Y-m-d"), 'value': products.createAd|date("Y-m-d")}
                                
                                }) }}
                                {{ form_label(form.image) }}
                                {{ form_widget(form.image, {
                                    'attr': {'placeholder': products.image, 'value': products.image}
                                }) }}
                                <img src="{{ asset('uploads/'~ products.image) }}" width="15%" height="15%">
                                <br>
                                <button type="submit" class="form-control form-control-user btn btn-warning">Editer</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

{% endblock %}