{% extends 'base.html.twig' %}

{% block title %}Module{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Custom fonts for this template-->
    <link href="../../vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="../../https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="../../css/sb-admin-2.min.css" rel="stylesheet">
    <style>
        .drop{
            display: none;
        }
    </style>

</head>

<body class="bg-gradient-gray"></body>

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="form-group row card-header py-3">
                                <div class="col-sm-10 mb-3 mb-sm-0 ">
                                    <h1 class="h4 text-gray-900 mb-4">Inscription</h1>
                                </div>
                                <div class="col-sm-2 mb-3 mb-sm-0 ">
                                    <a href="{{ app.request.headers.get('referer') }}" class="btn btn-success btn-user btn-block">Retour</a>
                                </div>
                            </div>
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Inscription</h1>
                                <span id="idclient" class="drop"></span>
                                {% for type, messages in app.flashes %}
                                    {% for message in messages %}
                                        <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                                            {{ message }}
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    {% endfor %}
                                {% endfor %}
                            </div>
                                {{ form_start(form) }}
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0 ">
                                        {{ form_label(form.nom) }}
                                        {{ form_widget(form.nom) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_label(form.createdAt) }}
                                        {{ form_widget(form.createdAt) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    {{ form_label(form.module) }}
                                    {{ form_widget(form.module) }}
                                </div>
                                <hr>
                                <div class="form-group row">
                                    
                                    
                                </div>
                                {{ form_widget(form._token) }}
                                <button type="submit" name="submit" id="submit" class="btn btn-primary btn-user btn-block">
                                    Enregistrer
                                </button>
                                </span>
                                {{ form_end(form) }}
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    
</body>

</html>
{% endblock %}

