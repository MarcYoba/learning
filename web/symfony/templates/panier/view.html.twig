{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title></title>

		<!-- Google font -->
		<link href="{{ asset('https://fonts.googleapis.com/css?family=Montserrat:400,500,700') }}" rel="stylesheet">

		<!-- Bootstrap -->
		<link type="text/css" rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"/>

		<!-- Slick -->
		<link type="text/css" rel="stylesheet" href="{{ asset('css/slick.css') }}"/>
		<link type="text/css" rel="stylesheet" href="{{ asset('css/slick-theme.css') }}"/>

		<!-- nouislider -->
		<link type="text/css" rel="stylesheet" href="{{ asset('css/nouislider.min.css') }}"/>

		<!-- Font Awesome Icon -->
		<link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">

		<!-- Custom stylesheet -->
		<link type="text/css" rel="stylesheet" href="{{ asset('css/style.css') }}"/>

		<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->

    </head>
	<body>

        {% include "product.html.twig" %}
        <br>
        <div class="container">
            <div class="card">
                <div class="card-body p-0">
                    {% set montant = 0 %}
                    {% for paniers in panier %}
                        {% set montant = montant + paniers.produit.prix %}
                            <li class="mb-2">
                                <div class="d-flex align-items-center">
                                    <img src="{{ asset('uploads/'~ paniers.produit.image) }}" alt="" class="img-fluid rounded me-2" style="width: 300px; height: 300px;">
                                    <div>
                                        <h6 class="mb-0"><a href="#" class="text-decoration-none">{{ paniers.produit.nom }}</a></h6>
                                        <small class="text-muted"><span class="fw-bold">1x</span> {{ paniers.produit.prix }}</small>
                                    </div>
                                    <button class="btn btn-sm btn-outline-danger ms-2">
                                        <a href="{{ path('panier_delete',{'id':paniers.id}) }}" class="btn btn-danger">
                                            Suppimer<i class="fas fa-close"></i>
                                        </a>
                                    </button>
                                    <div>
                                      <h4>
                                            {{ paniers.produit.caracteristique }}
                                      </h4>  
                                    </div>
                                    <div>
                                      <h4>
                                            {{ paniers.produit.description }}
                                      </h4>  
                                    </div>
                                </div>
                            </li>               
                    {% endfor %}
                    <div class="form-group row justify-content-between align-items-center">
                        <div class="col-auto text-left btn btn-primary" >
                            <a href="{{ path('produit_Boutique') }}" class="text-white">
                                <strong>
                                <i class="fas fa-arrow-circle-left"></i>
                                Boutique
                                </strong>
                            </a>
                        </div>
                        <div class="col-auto btn btn-success">
                            <strong>
                                <i class="fas fa-arrow-circle-right"></i>
                                Commander
                            </strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
    	<!-- FOOTER -->
        {% include "footer.html.twig" %}
		<!-- jQuery Plugins -->
		<script src="{{ asset('js/jquery.min.js') }}"></script>
		<script src="{{ asset('js/bootstrap.min.js') }}"></script>
		<script src="{{ asset('js/slick.min.js') }}"></script>
		<script src="{{ asset('js/nouislider.min.js') }}"></script>
		<script src="{{ asset('js/jquery.zoom.min.js') }}"></script>
		<script src="{{ asset('js/main.js') }}"></script>

	</body>
</html>
{% endblock %}