{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Custom fonts for this template-->

    <style>
        .drop{
            display: none;
        }
    </style>

</head>

<body class="bg-gradient-gray"></body>

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="card-header py-3">
                                <div class="form-group row">
                                        <div class="col-sm-6 ">
                                        <h6 class="m-0 font-weight-bold text-primary">Creation des Cours</h6>
                                        </div>
                                        <div class="col-sm-2 ">
                                            <a href="{{ path('inscription_view') }}" class="btn btn-secondary btn-user btn-block">
                                                <i class="fas fa-list"></i> Formation
                                            </a>
                                            
                                        </div>
                                        <div class="col-sm-2 ">
                                            <a href="{{ path('cours_list') }}" class="btn btn-success btn-user btn-block">
                                                <i class="fas fa-list"></i> List cours
                                            </a>
                                            
                                        </div>
                                        <div class="col-sm-2 ">
                                            <a href="{{ path('app_cours') }}" class="btn btn-primary btn-user btn-block">
                                                <i class="fas fa-plus"></i> Ajouter Cours
                                            </a>
                                            
                                        </div>
                                </div>
                            </div>
                            <div class="text-center">
                               
                                <span id="idclient" class="drop"></span>
                                {% for type, messages in app.flashes %}
                                    {% for message in messages %}
                                        <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                                            {{ message }}
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    {% endfor %}
                                {% endfor %}
                            </div>
                                {{ form_start(form) }}
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0 ">
                                        {{ form_widget(form.titre) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.code) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        {{ form_widget(form.description) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.durre) }}
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        {{ form_widget(form.videoFile) }}
                                    </div>
                                    
                                    <div class="col-sm-6">
                                        {{ form_widget(form.createdAt) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        {{ form_label(form.module) }}
                                        {{ form_widget(form.module) }}
                                        
                                    </div>
                                </div>
                                {{ form_widget(form._token) }}
                                <button type="submit" name="submit" id="submit" class="btn btn-primary btn-user btn-block">
                                    Enregistrer
                                </button>
                                
                                {{ form_end(form) }}
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    
</body>

</html>
{% endblock %}
