{% extends 'base.html.twig' %}

{% block title %}Hello CommandeController!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title></title>

		<!-- Google font -->
		<link href="{{ asset('https://fonts.googleapis.com/css?family=Montserrat:400,500,700') }}" rel="stylesheet">

		<!-- Bootstrap -->
		<link type="text/css" rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"/>

		<!-- Slick -->
		<link type="text/css" rel="stylesheet" href="{{ asset('css/slick.css') }}"/>
		<link type="text/css" rel="stylesheet" href="{{ asset('css/slick-theme.css') }}"/>

		<!-- nouislider -->
		<link type="text/css" rel="stylesheet" href="{{ asset('css/nouislider.min.css') }}"/>

		<!-- Font Awesome Icon -->
		<link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">

		<!-- Custom stylesheet -->
		<link type="text/css" rel="stylesheet" href="{{ asset('css/style.css') }}"/>

		<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->

    </head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        
       
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar -->
                {% include "product.html.twig" %}
                
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <div class="dropdown">
                        <i class="fas fa-shopping-cart me-3 text-white text-center"></i>
                        
                        {% set montant = 0 %}
                        
                        {% for paniers in panier %}
                            {% set montant = montant + paniers.produit.prix %}
                            
                                <li class="mb-2">
                                    <div class="d-flex align-items-center">
                                        <img src="{{ asset('uploads/'~ paniers.produit.image) }}" alt="" class="img-fluid rounded me-2" style="width: 50px; height: 50px;">
                                        <div>
                                            <h6 class="mb-0"><a href="#" class="text-decoration-none">{{ paniers.produit.nom }}</a></h6>
                                            <small class="text-muted"><span class="fw-bold">1x</span> {{ paniers.produit.prix }}</small>
                                        </div>
                                        <button class="btn btn-sm btn-outline-danger ms-2">
                                            <a href="{{ path('panier_delete',{'id':paniers.id}) }}">
                                                <i class="fas fa-close"></i>
                                            </a>
                                        </button>
                                    </div>
                                </li>
                                
                        {% endfor %}
                            <li>
                                <div class="border-top pt-2">
                                    <small class="text-muted">{{ panier|length }} Produit</small>
                                    <div class="fw-bold">{{ montant }} FCFA</div>
                                </div>
                            </li>
                    </div>
                </div>    
            </div>                    
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>vestion Production &copy; {{ "now"|date('Y-m-d') }}</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>


</body>

</html>
{% endblock %}
